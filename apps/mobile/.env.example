# GTSD Mobile App Environment Variables
# Copy this file to .env and fill in your values

# API Configuration
REACT_APP_API_URL=http://localhost:3000/api

# Development API (for local testing)
# REACT_APP_API_URL=http://10.0.2.2:3000/api  # Android Emulator
# REACT_APP_API_URL=http://localhost:3000/api  # iOS Simulator

# Production API
# REACT_APP_API_URL=https://api.gtsd.app/api

# Environment
NODE_ENV=development

# Feature Flags
ENABLE_BIOMETRIC_AUTH=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_ANALYTICS=false
ENABLE_CRASH_REPORTING=false

# Deep Linking
DEEP_LINK_SCHEME=gtsd
DEEP_LINK_DOMAIN=gtsd.app

# Sentry (Optional - for crash reporting)
SENTRY_DSN=

# Analytics (Optional)
ANALYTICS_API_KEY=

# Push Notifications (Optional)
FCM_SERVER_KEY=  # Android
APNS_KEY_ID=      # iOS
APNS_TEAM_ID=     # iOS

# Development Settings
DEV_AUTO_LOGIN=false
DEV_SKIP_ONBOARDING=false
DEV_USER_EMAIL=
DEV_USER_PASSWORD=